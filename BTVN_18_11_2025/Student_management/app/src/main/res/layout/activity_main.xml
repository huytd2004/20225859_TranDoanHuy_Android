<?xml version="1.0" encoding="utf-8"?>
<!-- Layout chính cho màn hình, dùng LinearLayout để xếp các View theo chiều dọc -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- ===================== -->
    <!--     KHU VỰC NHẬP LIỆU -->
    <!-- ===================== -->

    <!-- Ô nhập MSSV -->
    <EditText
        android:id="@+id/editTextMSSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã số sinh viên" />

    <!-- Ô nhập Họ Tên -->
    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Họ tên" />

    <!-- ===================== -->
    <!--      KHU VỰC NÚT BẤM -->
    <!-- ===================== -->

    <!-- Layout ngang chứa 2 nút Add và Update -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="8dp"> <!-- Đẩy nút sang bên phải -->

    <!-- Nút thêm sinh viên -->
    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:backgroundTint="#5E4B99" /> <!-- Màu tím -->

    <!-- Nút cập nhật sinh viên -->
    <Button
        android:id="@+id/buttonUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_marginStart="8dp"
        android:backgroundTint="#5E4B99" /> <!-- Tạo khoảng cách với nút Add -->
</LinearLayout>

    <!-- ===================== -->
    <!--     DANH SÁCH SINH VIÊN -->
    <!-- ===================== -->

    <!-- ListView hiển thị danh sách sinh viên -->
<ListView
android:id="@+id/listViewStudents"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_marginTop="16dp" />

    </LinearLayout>
